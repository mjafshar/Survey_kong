<div class="container">
  <h2>Welcome to your Kongboard</h2>

  <div class="large-btn">
    <a href="/survey/new">Create New Survey</a>
  </div>

  <div class='survey-type'>
    <h3>List of my surveys</h3>
    <div class="survey-list">
      <% @user_surveys.each do |survey| %>
      <ul>
        <li><a href="/survey/<%= survey.id %>"><%= survey.title %></a></li>
      </ul>
      <% end %>
    </div>
  </div>

  <div class='survey-type'>
    <h3>Surveys you have taken</h3>
    <div class="survey-list"></div>
  </div>

  <div class='survey-type'>
    <h3>Choose a survey</h3>
    <div class="survey-list"></div>
  </div>

</div>
